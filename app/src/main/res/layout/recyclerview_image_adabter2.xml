<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_full"
    android:layout_margin="10dp"
    android:background="#c5c5c5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action_imageRecyclerview_adabter2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/person_outline_home"/>
        <TextView
            android:id="@+id/acsiya_number_adabter2"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 950 000 Uzs"/>
    <TextView
        android:id="@+id/tv_product_money_adabter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="7 000 000 UZS"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/tv_product_name_adabter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:text="product  full name"/>
    <Button
        app:backgroundTint="@null"
        android:background="@color/cardview_dark_background"
        android:id="@+id/btn_productAdabter2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sotib olish"/>

</LinearLayout>

</FrameLayout>