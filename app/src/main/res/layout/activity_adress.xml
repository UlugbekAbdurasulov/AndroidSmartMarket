<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg_color"
    android:fitsSystemWindows="false"
    tools:context=".activity.AdressActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Выберите город"/>

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/clear"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#cbcbcb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/tv_region"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/background_button_reg"
                    android:text="Region"
                    android:gravity="left"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:textAllCaps="false"
                    android:textColor="#514D4D"
                    app:backgroundTint="@null"/>

                <Button
                    android:id="@+id/tv_oblast"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/background_button_reg"
                    android:text="Oblast"
                    android:gravity="left"
                    android:layout_marginTop="15dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:textAllCaps="false"
                    android:textColor="#514D4D"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dwdwedewe"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginVertical="15dp"
                    android:textAllCaps="false"
                    android:text="Soxranit"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
    <include layout="@layout/item_shared_info"
        android:id="@+id/fragment_drawer">
    </include>
</androidx.coordinatorlayout.widget.CoordinatorLayout>