<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg_color"
    android:fitsSystemWindows="false"
    tools:context=".activity.AdressActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Выберите город"/>

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/clear"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#cbcbcb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <LinearLayout
                        android:id="@+id/tv_region"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_button_reg"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:textAllCaps="false"
                        android:textColor="#514D4D">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black"
                            android:text="Region"/>
                        <TextView
                            android:id="@+id/tv_rgName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="bottom"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:id="@+id/tv_oblast"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_button_reg"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:textAllCaps="false"
                        android:textColor="#514D4D">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black"
                            android:text="Oblast"/>
                        <TextView
                            android:id="@+id/tv_rgOb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="bottom"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сизга энг яқин ва мос келадиган маҳсулот ва сотувчиларни кўрсатишимиз учун сиз жойлашган туман/шаҳарни танланг."
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginVertical="15dp"
                    android:textAllCaps="false"
                    android:text="Soxranit"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
    <include layout="@layout/item_shared_info"
        android:id="@+id/fragment_drawer">
    </include>

    <include layout="@layout/item_shared_info_sec"
        android:id="@+id/fragment_drawerSec">
    </include>
</androidx.coordinatorlayout.widget.CoordinatorLayout>